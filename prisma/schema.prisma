// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  discordId String @id
  name      String
  role      Role

  Account Account[]
}

model Account {
  id          String  @id
  puuid       String?
  name        String
  sumonerLvl  Int
  profileIcon String

  tier   Tier?
  rank   Rank?
  LP     Int?  @default(0)
  wins   Int?  @default(0)
  losses Int?  @default(0)
  LPC    Int?  @default(0)

  player          Player         @relation(fields: [playerDiscordId], references: [discordId], onDelete: Cascade)
  playerDiscordId String
  LpUpdate        LpUpdateS142[]
  LpUpdateS14     LpUpdateS14[]
  LpUpdateOLD     LpUpdate[]
}

model LpUpdate {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  date           DateTime
  LPC            Int
  tier           Tier     @default(SILVER)
  rank           Rank
  LP             Int
  lastUpdateDiff Int
  isDodge        Boolean?

  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId String
}

model LpUpdateS14 {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  date           DateTime
  LPC            Int
  tier           Tier     @default(SILVER)
  rank           Rank
  LP             Int
  lastUpdateDiff Int
  isDodge        Boolean?

  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId String
}

model LpUpdateS142 {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  date           DateTime
  LPC            Int
  tier           Tier     @default(SILVER)
  rank           Rank
  LP             Int
  lastUpdateDiff Int
  isDodge        Boolean?
  championName   String?
  championId     Int?
  matchId        String?
  kill           Int?
  death          Int?
  assist         Int?

  season Season @default(S15)

  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId String
}

enum Season {
  S142
  S143
  S15
}

enum Tier {
  IRON
  BRONZE
  SILVER
  GOLD
  PLATINUM
  EMERALD
  DIAMOND
  MASTER
  GRANDMASTER
  CHALLENGER
}

enum Rank {
  I
  II
  III
  IV
}

enum Role {
  top
  jungle
  mid
  adc
  support
}
